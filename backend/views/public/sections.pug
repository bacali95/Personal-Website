    //Portfolio
    section#portfolio.bg-white.t-center
        .portfolio
            .content
                .block-content.mb-100
                    .row
                        .col-md-12
                            .main-title
                                h1.mb-20 Portfolio
                                h5.uppercase My Works
                .block-content.mb-100
                    .works
                        .row
                            .col-md-12
                                .block-filter.uppercase.mb-40
                                    ul#category.filter
                                        li
                                            a.active(href='#', data-filter='all') all
                                        each category, i in categories
                                            li
                                                a(href='#', data-filter=category.name) #{category.name}
                        .row
                            if projects.length === 0
                                p.mb-200 Comming Soon
                            - var i = 0
                            while i < projects.length
                                - var j = i;
                                - i+=2;
                                .col-md-12
                                    ul.work.mb-20
                                        while  j < Math.min(i, projects.length)
                                            li.col-sm-6
                                                div.item(class=projects[j].categories.map(value => value.name).join(' '))
                                                    a(href='/project/' + projects[j]._id + '?index=' + j, target='_blank')
                                                        .desc
                                                            h5.proj-desc
                                                                | #{projects[j].title}
                                                                span #{projects[j].categories.map(value => value.name).join(', ')}
                                                        img(src=projects[j++].images[0].secure_url, alt='')
                .block-content
                    .row
                        .col-md-12
                            span.page-number.emph-1 - 3/5 -
