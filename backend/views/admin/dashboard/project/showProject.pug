extends ../dashboardLayout

block sub-content
    h1.pb-md-4 Show Project
    div.pt-sm-2
        div.row
            div.col-md-6
                div.col-md-12
                    div.row
                        div.col-md-0
                        div.col-md-auto
                            h5 Content :
                    div.pt-sm-3
                        div.row
                            div.col-md-4
                                p.float-left Title :
                            div.col-md-auto
                                p.float-left=project.title
                        div.row
                            div.col-md-4
                                p.float-left Description :
                            div.col-md-8
                                p.float-left!=project.description
                        div.row
                            div.col-md-4
                                p.float-left Type :
                            div.col-md-auto
                                p.float-left=project.type
                div.col-md-12
                    div.row
                        div.col-md-0
                        div.col-md-auto
                            h5 Informations :
                    div.pt-sm-3
                        div.row
                            div.col-md-4
                                p.float-left Categories :
                            div.col-md-8
                                p.float-left=project.category
                        div.row
                            div.col-md-4
                                p.float-left Github Link :
                            div.col-md-8
                                p.float-left=project.repoGithub
                        div.row
                            div.col-md-4
                                p.float-left Start Work at :
                            div.col-md-8
                                p.float-left=project.period.start
                        div.row
                            div.col-md-4
                                p.float-left Finish Work at :
                            div.col-md-8
                                p.float-left=project.period.finish

                        div.row
                            div.col-md-12
                                a.text-white.btn.btn-success.btn-lg.mr-2.mt-2(href='/project/' + project._id + '?index=' + index, target='_blank') Show in public
                                a.text-white.btn.btn-info.btn-lg.mr-2.mt-2(href='/admin/project/edit/' + project._id) Edit
                                a.text-white.btn.btn-danger.btn-lg.mt-2(href='/admin/project/delete/' + project._id) Remove
            div.col-md-6.mt-3
                each image in project.images
                    div.form-group
                        img(src=image.secure_url, width='100%')
