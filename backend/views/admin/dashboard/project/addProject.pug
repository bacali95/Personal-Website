extends ../dashboardLayout

block sub-content
    h1#title.pb-md-4 Add Project
    div#errors.row
        if errors
            ul.error
                li #{errors[0].msg}
    div.pt-sm-2
        form#projectForm.col-md-12.offset-md-0(method='post', action='/admin/project/add')
            div.row
                div.col-md-12
                    div.float-left.ml-1
                        label Content :
                    div.justify-content-center
                        .form-group
                            input.form-control(name='title', type='text', placeholder='Enter Title', required)
                        .form-group
                            textarea.form-control(name='description', rows='3', placeholder='Enter Description', required)
                        .form-group
                            input.form-control(name='type', type='text', placeholder='Enter Type', required)
            div.row
                div.col-md-6
                    div.float-left.ml-1
                        label Category :
                    .form-group
                        select.form-control.dropdown(name='category', multiple, required)
                            option(selected disabled hidden) Choose Category
                            each category, i in categories
                                option #{category.name}
                div.col-md-6
                    div.row
                        div.col-md-6
                            div.float-left.ml-1
                                label Start Date :
                            .form-group
                                input.form-control(name='startDate', type='month', value=moment(Date.now()).format("YYYY-MM"), required)
                        div.col-md-6
                            div.float-left.ml-1
                                label Finish Date :
                            .form-group
                                input.form-control(name='finishDate', type='month', value=moment(Date.now()).format("YYYY-MM"), required)
                    .form-group
                        input.form-control(name='repoGithub', type='text', placeholder='Enter Github repository link', required)
            div.row.justify-content-center
                .form-group.mr-2
                    a#fileSelect.btn.btn-info(style='color: white') Select Images
                    input#files.form-control-file(name='image', type='file', multiple = 'multiple', hidden='true')
                .form-group.mr-2
                    input#images(name='images', type='hidden', value='')
                    input.btn.btn-primary(type='submit', value='Submit')
                .form-group
                    a#cancel.btn.btn-danger(href='javascript:history.back()') Cancel
            div#selectedFiles.row


