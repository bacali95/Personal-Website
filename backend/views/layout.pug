doctype html
html
    head
        title #{profile.firstName} #{profile.lastName}
        // Metas
        meta(charset='utf-8')
        meta(name='description', content='')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name='keywords', content='nasreddine bac ali')
        meta(content='telephone=no', name='format-detection')
        // Css
        link(href='stylesheets/public/bootstrap.css', rel='stylesheet', type='text/css', media='all')
        link(href='stylesheets/public/base.css', rel='stylesheet', type='text/css', media='all')
        link(href='stylesheets/public/main.css', rel='stylesheet', type='text/css', media='all')
        link(href='stylesheets/public/owl-carousel/owl.carousel.css', rel='stylesheet', media='all')
        link(href='stylesheets/public/owl-carousel/owl.theme.css', rel='stylesheet', media='all')
        link(href='stylesheets/public/magnific-popup.css', type='text/css', rel='stylesheet', media='all')
        link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,400italic,300,600%7CRoboto+Slab:400,300,700', rel='stylesheet', type='text/css')
        link(href='stylesheets/public/fontello.css', rel='stylesheet', type='text/css', media='all')
        link(href='stylesheets/public/leaflet.css', rel='stylesheet', type='text/css', media='all')
    body
        .loader
            .loader-inner
                .spinner
                    .dot1
                    .dot2
        #wrapper.mb-150.mt-70
            .container
                .row
                    .col-md-2.left-content.pd-r0
                        header#header
                            .main-header
                                .img-profile
                                    img(src=profile.imageURL ? profile.imageURL : "images/public/noimage.png", alt='', width='982px')
                                    .name-profile.t-center
                                        h5.uppercase #{profile.firstName} #{profile.lastName}
                                nav#main-nav.main-nav.clearfix.t-center.uppercase.tabbed
                                    ul.clearfix
                                        li
                                            a(href='#about')
                                                i.icon-user
                                                | About me
                                                span who am i
                                        li
                                            a(href='#resume')
                                                i.icon-briefcase
                                                | Resume
                                                span curriculum vita
                                        li
                                            a(href='#portfolio')
                                                i.icon-camera
                                                | Portfolio
                                                span my projects
                                        li
                                            a(href='#contact')
                                                i.icon-phone
                                                | Contact
                                                span Say hello
                    .col-md-9.right-content.pd-r0.pd-l0
                        block sections
                        block content

                    footer.footer
                        .col-md-1.pd-l0
                            ul.social
                                li
                                    a(href='https://github.com/bacali95', target='_blank')
                                        i.icon-github
                                li
                                    a(href='https://linkedin.com/in/bacali', target='_blank')
                                        i.icon-linkedin
                                li
                                    a(href='https://fb.me/nasreddine.bacali', target='_blank')
                                        i.icon-facebook
                                li
                                    a(href='https://twitter.com/_bacali', target='_blank')
                                        i.icon-twitter
                                li
                                    a(href='mailto:nasreddine.bacali95@gmail.com', target='_blank')
                                        i.icon-mail
        script(src='javascripts/public/jquery-1.11.3.min.js', type='text/javascript')
        script(src='javascripts/public/owl.carousel.js', type='text/javascript')
        script(src='javascripts/public/jquery.magnific-popup.js', type='text/javascript')
        script(src='javascripts/public/jquery.easytabs.min.js', type='text/javascript')
        script(src='javascripts/public/placeholders.min.js', type='text/javascript')
        script(src='javascripts/public/script.js', type='text/javascript')
        script(src='javascripts/public/leaflet.js', type='text/javascript')
        script.
          (function($) {
            "use strict";
            // Easytab setup
            $('#wrapper').easytabs({
              animate: true,
              updateHash: false,
              transitionIn: 'fadeIn',
              transitionOut: 'fadeOut',
              animationSpeed: 100,
              tabActiveClass: 'active',
              tabs: ' #main-nav.tabbed > ul > li ',
              transitionInEasing: 'linear',
              transitionOutEasing: 'linear'
            });
          })(jQuery);
